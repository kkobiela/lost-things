<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/detailsItemIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:transitionName="photo"
                tools:src="@mipmap/ic_launcher"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Nazwa"/>

        <TextView
                android:id="@+id/detailsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Opis"/>

        <TextView
                android:id="@+id/detailsDescription"
                android:layout_width="match_parent"
                android:padding="@dimen/medium_padding"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Lokalizacja"/>

        <TextView
                android:id="@+id/detailsLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <TextView
                android:id="@+id/detailsDateFoundLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Data znalezienia"/>

        <TextView
                android:id="@+id/detailsDateFound"
                android:layout_width="match_parent"
                android:padding="@dimen/medium_padding"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Data dodania"/>

        <TextView
                android:id="@+id/detailsDateAdded"
                android:layout_width="match_parent"
                android:padding="@dimen/medium_padding"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Kontakt"/>

        <TextView
                android:id="@+id/detailsContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
    </LinearLayout>
</ScrollView>
